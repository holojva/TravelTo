<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fde4c2"
    android:radius="10dp">


    <TextView
        android:id="@+id/placeAddress6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="23dp"
        android:background="#e8c25b"
        android:clickable="true"
        android:fontFamily="@font/unbounded_bold"
        android:gravity="center"
        android:onClick="report"
        android:padding="20px"
        android:radius="10dp"
        android:text="Оставить отзыв"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeAddress5" />

    <TextView
        android:id="@+id/placeAddress2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="48dp"
        android:background="#e8c25b"
        android:clickable="true"
        android:fontFamily="@font/unbounded"
        android:gravity="center"
        android:onClick="fav"
        android:padding="20px"
        android:radius="10dp"
        android:text="Добавить/Убрать из Избранного"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeAddress4"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="34dp"
        android:background="#e8c25b"
        android:fontFamily="@font/unbounded_bold"
        android:gravity="center"
        android:onClick="infoScreen"
        android:padding="0px"
        android:radius="10dp"
        android:text="Гора Арарат"
        android:textAlignment="gravity"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_view_img" />

    <TextView
        android:id="@+id/placeAddress"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="18dp"
        android:background="#e8c25b"
        android:fontFamily="@font/unbounded"
        android:gravity="center"
        android:padding="0px"
        android:radius="10dp"
        android:text="Беларусь, Минск, проспект Независимости, 171"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeName" />

    <TextView
        android:id="@+id/placeAddress5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="34dp"
        android:background="#e8c25b"
        android:fontFamily="@font/unbounded"
        android:gravity="center"
        android:padding="0px"
        android:radius="10dp"
        android:text="Беларусь, Минск, проспект Независимости, 171"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeName" />

    <TextView
        android:id="@+id/placeAddress4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="16dp"
        android:background="#e8c25b"
        android:clickable="true"
        android:fontFamily="@font/unbounded"
        android:gravity="center"
        android:onClick="reviews"
        android:padding="20px"
        android:radius="10dp"
        android:text="Отзывы"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress6"
        app:layout_constraintEnd_toStartOf="@+id/placeAddress3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeAddress5"
        app:layout_constraintVertical_bias="0.492" />

    <TextView
        android:id="@+id/placeAddress3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="13dp"
        android:background="#e8c25b"
        android:fontFamily="@font/unbounded"
        android:gravity="center"
        android:onClick="favourite"
        android:padding="20px"
        android:radius="10dp"
        android:text="Избранное"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeAddress4"
        app:layout_constraintTop_toBottomOf="@+id/placeAddress5"
        app:layout_constraintVertical_bias="0.0" />

    <WebView
        android:id="@+id/web_view_img"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="34dp"
        android:radius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/placeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webViewwww"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
