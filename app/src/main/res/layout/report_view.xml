<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fde4c2">


    <EditText
        android:id="@+id/plain_text_input6"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/unbounded"
        android:hint="Ваша оценка (целое число от 1 до 5)"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/plain_text_input3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeName" />

    <EditText
        android:id="@+id/plain_text_input3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/unbounded"
        android:hint="Содержание отзыва"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/placeAddress11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input6" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/unbounded_bold"
        android:gravity="center"
        android:padding="20px"
        android:text="Оставить отзыв"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/plain_text_input6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeAddress11"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="38dp"
        android:background="#E8C25B"
        android:clickable="true"
        android:fontFamily="@font/unbounded_bold"
        android:gravity="center"
        android:onClick="send"
        android:padding="20px"
        android:text="Отправить отзыв"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input3" />

    <WebView
        android:id="@+id/webVieww"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
